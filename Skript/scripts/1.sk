variables:
    antyspam.%player% = 0
on chat:
    if {antyspam.%player%} is 0:
        if player has permission "blaze.spam":
            stop
        else:
            if player has permission "blaze.spam.vip":
                set {antyspam.%player%} to 5
            else:
                set {antyspam.%player%} to 10
    else:
        cancel event
        send "&4Blad: &cMozesz napisac dopiero za %{antyspam.%player%}% s"

command /chat [<text>] [<text>]:
	trigger:
		if player has permission "chat.*":
			if arg 1 is empty:
				send " &8ï¿½ &7Poprawne uzycie: &6/chat <off/on/clear>" to player
			else if arg 1 is "on":
				if {chat.stan} is true:
					send "&8(&E&LCHAT&8) &8- &fChat serwera jest juz wlaczony" to player
					execute console command "tb msg %player% &c&lChat jest juz wlaczony!"
					stop trigger
				set {chat.stan} to true
				broadcast "&8(&E&LCHAT&8) &8- &fChat serwera zostal wlaczony przez &6%player%"
			else if arg 1 is "off":
				if {chat.stan} is false:
					send "&8(&E&LCHAT&8) &8- &fChat serwera jest juz wylaczony" to player
					execute console command "tb msg %player% &c&lChat jest juz wylaczony!"
					stop trigger
				set {chat.stan} to false
				loop 100 times:
					broadcast " "
				if "%arg 2%" is "<none>":
					broadcast "&8(&E&LCHAT&8) &8- &fChat serwera zostal wylaczony przez &6%player%"
				else:
					broadcast "&8(&E&LCHAT&8) &8- &fChat serwera zostal wylaczony przez &6%player%&7, z powodu &6%arg 2%"
			else if arg 1 is "c":
				loop 100 times:
					broadcast " "
				broadcast "&8(&E&LCHAT&8) &8- &fChat serwera zostal wyczyszczony przez &6%player%"
			else:
				send "&8(&E&LCHAT&8) &8- &fPoprawne uzycie &6/chat <off/on/c>" to player
			stop trigger
		else:
			send "&8(&E&LCHAT&8) &8- &fNie masz permissji do &c(chat.*)"
			
		
			
        
