command /tp [<offlineplayer>]:
	trigger:
		if player has permission "helper.tp":
			if arg-1 is set:
				if arg-1 is online:
					teleport player to arg-1
					send "&7Zostales przeteleportowany do gracza &e%arg-1%."
				else:
					send "&cBlad: &7Gracz nie jest na serwerze!"
			else:
				send "&7Wpisz: &e/tp [gracz]"
		else:
			send "&cBlad: &7Nie masz uprawnien!"
            
command /s [<offlineplayer>]:
	trigger:
		if player has permission "helper.s":
			if arg-1 is set:
				if arg-1 is online:
					teleport arg-1 to player
					send "&7Przeteleportowales &e%arg-1% &7do siebie."
					send "&7Zostales przeteleportowany do administratora &e%player%." to arg-1
				else:
					send "&cBlad: &7Gracz nie jest na serwerze!"
			else:
				send "&7Wpisz: &e/s [gracz]"
		else:
			send "&cBlad: &7Nie masz uprawnien!"
            
            
command /ip [<player>]:
	permission: timehc.ip
	permission message: &4Blad: &cBrak uprawnien &8[&7perm.core&8]
	trigger:
		if arg 1 is set:
			send "&eAdres IP gracza &6%arg%&e to &6&l%arg's ip%!"
		else:
			send "&4Blad: &7Musisz podac gracza!"
            
