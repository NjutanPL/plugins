command /onkit:
	trigger:
		if player has permission "kity.on":
			execute console command "sk disable KIT.sk"
			execute console command "tb all &7KITY ZOSTALY"
			execute console command "stb all &a&lWLACZONE"
			stop
		else:
			send "&c&lNIE MASZ DO TEGO UPRAWNIEN!"
        
        
command /offkit:
	trigger:
		if player has permission "kity.off":
			execute console command "sk enable KIT.sk"
			execute console command "tb all &7KITY ZOSTALY"
			execute console command "stb all &c&lWYLACZONE"
			stop
		else:
			send "&c&lNIE MASZ DO TEGO UPRAWNIEN!"
            
            